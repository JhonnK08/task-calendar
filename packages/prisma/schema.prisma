generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model task {
  id          String   @default(uuid())
  title       String   @db.VarChar(50)
  description String?  @db.VarChar(200)
  dateTime    DateTime
  duration    Int

  @@id([id])
  @@unique([id])
}
